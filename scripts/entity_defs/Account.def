<root>
	<Properties>
		<characters>
			<Type> AVATAR_INFO_LIST </Type>
			<Flags> BASE </Flags>
			<Persistent> true </Persistent>
		</characters>
        <activeCharacter>
            <Type>          MAILBOX             </Type>
            <Flags>         BASE                </Flags>
        </activeCharacter>
	</Properties>

	<ClientMethods>
        <onHello>
           <Arg>UNICODE</Arg>
        </onHello>
        <onReqAvatarList>
            <Arg>   AVATAR_INFO_LIST   </Arg>
        </onReqAvatarList>
        <onCreateAvatarResult>
           <Arg>UINT8</Arg>
           <Arg>AVATAR_INFO</Arg>
        </onCreateAvatarResult>
        <onRemoveAvatar>
            <Arg>   DBID        </Arg>
        </onRemoveAvatar>
	</ClientMethods>

	<BaseMethods>
        <reqAvatarList>
            <Exposed/>
        </reqAvatarList>
        <reqCreateAvatar>
        	<Arg>UNICODE</Arg>
            <Arg>UINT8</Arg>
            <Exposed/>
        </reqCreateAvatar>
        <reqRemoveAvatar>
            <Exposed/>
            <Arg>   UNICODE </Arg>  <!-- name --> 
        </reqRemoveAvatar>
        <selectAvatarGame>
            <Exposed/>
            <Arg>   DBID    </Arg>  <!-- dbid -->
        </selectAvatarGame>
	</BaseMethods>

	<CellMethods>
	</CellMethods>

</root>
